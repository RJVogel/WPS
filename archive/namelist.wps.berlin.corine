 truelat2  =  52.98,
 stand_lon =  13.44,
 geog_data_path = '/opt/ARW/DATA/WPS_GEOG'
/

&ungrib
 out_format = 'WPS',
 prefix = 'FILE',
/

&metgrid
 constants_name = 'TAVGSFC', ! Substitute SST with daily average surface temperature over lakes
 fg_name = 'FILE',
 io_form_metgrid = 2,
/
