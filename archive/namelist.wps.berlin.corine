&share
 wrf_core = 'ARW',
 max_dom = 3,
 start_date = '2010-06-21_00:00:00','2010-06-21_00:00:00','2010-06-21_00:00:00',
 end_date   = '2010-07-04_00:00:00','2010-07-04_00:00:00','2010-07-04_00:00:00',
